{
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": [
      "error",
      { "varsIgnorePattern": "^_", "argsIgnorePattern": "^_" }
    ]
  },
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "overrides": [
    {
      "files": ["static/js/**/*.js"],
      "env": {
        "browser": true
      },
      "globals": {
        "$": "readonly",
        "Chart": "readonly",
        "bootstrap": "readonly",
        "Sortable": "readonly"
      }
    }
  ]
}
